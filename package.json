{
  "name": "pizzaria-pedidos",
  "version": "1.0.0",
  "description": "AXION PDV - Sistema de Ponto de Venda Desktop (Electron + React)",
  "author": "Iago Barreto",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "build": "vite build",
    "clean:dist": "node -e \"require('fs').rmSync('dist',{ recursive: true, force: true }); require('fs').rmSync('dist-electron',{ recursive: true, force: true })\"",
    "build:prod": "npm run clean:dist && npm run build",
    "preview": "vite preview",
    "start": "electron .",
    "electron:build": "npm run clean:dist && npm run build && electron-builder"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "concurrently": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "express": "^4.22.1",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.7.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "sass-embedded": "^1.93.3",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.axion.pdv",
    "productName": "AXION PDV",
    "icon": "AXIONPDV.png",
    "artifactName": "AXION PDV Setup ${version}.${ext}",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "publish": null,
    "win": {
      "target": "nsis",
      "executableName": "AXION PDV",
      "icon": "AXIONPDV.ico"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
